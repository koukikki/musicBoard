<div class="wrapper">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Sign up</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render partial: "rooms/error_messages", locals:{model: @user} %>
        <div class="field">
          <%= f.label :name, "ユーザー名(10文字以内)" %><br />
          <%= f.text_field :name, autofocus: true, maxlength: "10", id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス(@が必須)" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>