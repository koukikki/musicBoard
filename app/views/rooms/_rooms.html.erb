<div class="room">
  <div class="post">
    <div class="edit_bar">
      <div class="room_post">
        タイトル：<%= link_to room.title, room_comments_path(room), class: :room_url %>
      </div>
    
      <% if current_user.id == room.user.id %>
      <ul class="edit_lists"><li class="edit_btn" id="lists">edit</li></ul>
      <ul class="show-lists hidden" id="pull-down">
        <li class="pull-down-list"><%= link_to '編集', edit_room_path(room.id), class: :room__btn %></li>
        <li class="pull-down-list"><%= link_to '削除', room_path(room.id), method: :delete, class: :room__btn %></li>
      </ul>
      <% end %>
    </div>
    <div class="edit_bar">
      <p class="room_post">
        アーティスト：<%= room.artist %>
      </p>
    </div>
      <p class="room_post">
        リリース日：<%= room.date %>
      </p>
      <p class="room_post">
        投稿者：<%= link_to room.user.name, user_path(room.user.id), class: :room_user %>
      </p>
  </div>
</div>
