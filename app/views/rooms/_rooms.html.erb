<div class="room">
  <div class="post">
    <div class="edit_bar">
      <div class="room_post">
        タイトル：<%= link_to room.title, room_comments_path(room), class: :room_url %>
      </div>
      <% if current_user.id == room.user.id %>
        <div><%= link_to "編集", edit_room_path(room.id), class: :room__btn %></div>
      <% end %>
    </div>
      <p class="room_post">
        アーティスト：<%= room.artist %>
      </p>
      <p class="room_post">
        リリース日：<%= room.date %>
      </p>
      <p class="room_post">
        投稿者：<%= link_to room.user.name, user_path(room.user.id), class: :room_user %>
      </p>
  </div>
</div>